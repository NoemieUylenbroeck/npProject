        <input type="submit" value="Add to cart">
    </form>
</section>
</section>
    <h2>Reviews</h2>
    <%for(i=0; i < review.length; i++){%>
        <p><%=review[i].username%> :</p>
        <p>"<%= review[i].review%>"</p>
    <%}%>
        <form action="../addreview/<%= product.name%>" method="POST">
            <input type="textarea" placeholder="Write your review" name="review" required>
            <input type="submit" value="Submit">
        </form>
</section>
