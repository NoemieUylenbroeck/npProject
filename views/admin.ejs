<%- include('head.ejs'); %>
<body>
    <%- include('navbar.ejs'); %>
<h1>Add a product</h1>
<form action="../adminaddproduct" method="POST">
    <input type="text" placeholder="Name" name="name" required autofocus>
    <input type="textarea" placeholder="description" name="description" required>
    <input type="number" placeholder="price" name="price" required>
    <input type="text" placeholder="Image's title" name="imagetitle" required>
    <input type="submit" value="Add">
</form>
<h1>Delete a product</h1>
<%for(i=0; i < productsValues.length; i++){%>
    <p>id :<%= productsValues[i].productId%></p> 
    <p>name : <%= productsValues[i].name%></p>
    <p>"<%= productsValues[i].description%>"</p>
    <p><%= productsValues[i].price%>â‚¬</p>
    <a href="../admindeleteproduct/<%= productsValues[i].productId%>">Delete</a>
<%}%>
<h1>Delete a review</h1>
<%for(i=0; i < reviewsValues.length; i++){%>
    <p>id :<%= reviewsValues[i].reviewId%></p> 
    <p>user : <%= reviewsValues[i].username%></p>
    <p>product : <%= reviewsValues[i].productName%></p>
    <p>"<%= reviewsValues[i].review%>"</p>
    <a href="../admindeletereview/<%= reviewsValues[i].reviewId%>">Delete</a>
<%}%>
</body>
</html>